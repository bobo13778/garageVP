{% extends 'base.html.twig' %}

{% set userRole = auth %}

{% block title %}Occasion{{vehicule.title}}{% endblock %}

{% block body %}
<h1>{{vehicule.title}}</h1>
<div class="row justify-content-center mh">
  <div class="col-12 col-md-6">
    <div id="carousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src={{photo1.src}} alt="First slide"/>
        </div>
        {% for photo in photos %}
          <div class="carousel-item">
            <img class="d-block w-100" src={{photo.src}} alt="slide"/>
          </div>
        {% endfor %}
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
</div>
<h2>{{vehicule.price}} €</h2>
<span>{{vehicule.description}}</span>
<span>Année : {{vehicule.year}}</span>
<span>{{vehicule.fuel}}</span>
<span>{{vehicule.mileage}} km</span>
<span>{{vehicule.gearbox}}</span>
<span>Couleur : {{vehicule.color}}</span>
<span>{{vehicule.doors}} portes</span>
<span>{{vehicule.seats}} places</span>
<span>Puissance : {{vehicule.power}} ch</span>
<span>Puissance fiscale : {{vehicule.fiscalPower}} ch</span>
<span>Hauteur : {{vehicule.height}} m</span>
<span>Largeur : {{vehicule.width}} m</span>
<span>Longueur : {{vehicule.length}} m</span>
<span>Emission de CO2 : {{vehicule.co2Emission}} g/km</span>
<span>Volume du coffre : {{vehicule.trunkVolume}} l</span>
<a href="./contact?annonce={{vehicule.id}}" class ="btn">Nous contacter pour cette annonce</a>
{% endblock %}
