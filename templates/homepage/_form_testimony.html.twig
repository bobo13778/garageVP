        <form class="container-fluid" method="POST" action="./submit">
          <div class="row">
              <div class="form-group col-12 col-md-6 mb-3">
                  <label for="name"><h4>Nom</h4></label>
                  <input type="text" class="form-control" id="name" name="name" required/>
              </div>
              <div class="form-group col-12 col-md-6 mb-3">
                  <div class="form-check" id="starsForm">
                    <legend><h4>Note</h4></legend>
                    {% for i in 1..5 %}
                    <input class="d-none" type="radio" name="grade" id="flexRadioDefault{{ i }}" required value="{{i}}">
                    <label for="flexRadioDefault{{ i }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" stroke="black" class="bi bi-star-fill" viewBox="0 0 16 16">
                        <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                        </svg>
                    </label>
                    {% endfor %}
                  </div>
              </div>
              <div class="form-group col-12 mb-3">
                  <label for="content"><h4>Votre message</h4></label>
                  <textarea  class="form-control" id="content" name="content" required rows="3"></textarea>
              </div>
              <input type='hidden' name='toValidate' value='true'/> 
              <button type="submit" class="btn mt-3 mb-3 col-3">Envoyer</button>
          </div>
        </form>