<form class="container-fluid" method="POST" action="./admin/modifyschedule">
                   
  <table class="table shadow">
      <thead>
          <tr>
              <th scope="col"></th>
              <th scope="col" colspan='2' class="text-center">Matin</th>
              <th scope="col"></th>
              <th scope="col" colspan='2' class="text-center">Après-midi</th>
              <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
          <tr>
              <th scope="row"></td>
              <td>Ouverture</td>
              <td>Fermeture</td>
              <td>Fermé</td>
              <td>Ouverture</td>
              <td>Fermeture</td>
              <td>Fermé</td>
          </tr>
          {% for schedule in schedules %}
              <tr>
                  <th scope="row"><input type="text" name="day{{schedule.id}}" required value="{{schedule.day}}"/></td>
                  <td><input type="time" name="morningStart{{schedule.id}}" required value="{{schedule.morningStart}}"/></td>
                  <td><input type="time" name="morningEnd{{schedule.id}}" required value="{{schedule.morningEnd}}"/></td>
                  {% if schedule.morningIsClosed %}
                      <td><input type="checkbox" name="morningIsClosed{{schedule.id}}" value="1" checked/></td>
                  {% else %}
                      <td><input type="checkbox" name="morningIsClosed{{schedule.id}}" value="1"/></td>
                  {% endif %}
                  <td><input type="time" name="afternoonStart{{schedule.id}}" required value="{{schedule.afternoonStart}}"/></td>
                  <td><input type="time" name="afternoonEnd{{schedule.id}}" required value="{{schedule.afternoonEnd}}"/></td>
                  {% if schedule.afternoonIsClosed %}
                      <td><input type="checkbox" name="afternoonIsClosed{{schedule.id}}" value="1" checked/></td>
                  {% else %}
                      <td><input type="checkbox" name="afternoonIsClosed{{schedule.id}}" value="1"/></td>
                  {% endif %}
              </tr>
          {% endfor %}
  </table>
  <button type="submit" class="btn mt-3 mb-3 col-3">Valider</button>

</form>