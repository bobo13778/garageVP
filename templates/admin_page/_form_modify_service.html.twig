        <form class="container-fluid" method="POST" action="./admin/modifyservice" enctype="multipart/form-data">
          <div class="row">
              <div class="form-group col-12 col-md-6 mb-3">
                  <label for="name"><h4>Titre</h4></label>
                  <input type="text" class="form-control" id="name" name="name" required value="{{service.name}}"/>
              </div>
              <div class="form-group col-12 col-md-6 mb-3">
                  <label for="description"><h4>Description</h4></label>
                  <textarea type="text" class="form-control" id="description" name="description" required>
                    {{service.description}}
                  </textarea>
              </div>
              <div class="custom-file col-12 col-md-6 mb-3">
                    <label for="picture" class="custom-file-label"><h4>Image</h4></label>
                    <input type="file" class="custom-file-input" id="picture" name="picture" required/>
              </div>
              <input type='hidden' name='idServiceToModify' value={{service.id}}/> 
              <button type="submit" class="btn mt-3 mb-5 col-3">Modifier</button>
          </div>
        </form>