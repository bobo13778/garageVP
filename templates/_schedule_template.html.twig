<div class="container-fluid">

    <a class="link" data-bs-toggle="collapse" data-bs-target="#collapseSchedule" role="button" aria-expanded="false" aria-controls="collapseExample">
      Horaires
    </a>

  <div class="collapse" id="collapseSchedule">
    <ul class="list-unstyled">
      {% for schedule in schedules %}
        <li>
          <p class="row">
            <strong class="col-4">{{schedule.day}} :</strong>
            {% if schedule.morningisclosed == "1" %}
              {% if schedule.afternoonisclosed == "1" %}
                <span class="col-8">Fermé</span>
              {% else %}
                <span class="col-8">Ouvert de {{schedule.afternoonstart|date("H:i")}} à {{schedule.afternoonend|date("H:i")}}</span>
              {% endif %}
            {% elseif schedule.afternoonisclosed == "1" %}
            <span class="col-8">Ouvert de {{schedule.morningstart|date("H:i")}} à {{schedule.morningend|date("H:i")}}</span>
            {% else %}
            <span class="col-8">Ouvert de {{schedule.morningstart|date("H:i")}} à {{schedule.morningend|date("H:i")}} et de {{schedule.afternoonstart|date("H:i")}} à {{schedule.afternoonend|date("H:i")}}</span>
            {% endif %}
          </p>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>